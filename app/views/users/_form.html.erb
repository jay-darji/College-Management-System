<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Welcome to Sign up page</title>
  <link rel="stylesheet" href="/app/assets/stylesheets/users/form.css">
</head>
<body class="Form">

  <%= form_with model: user  do |form| %>
    <% if user.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
          <% user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="Entry">
      <%= form.label :firstName,"First Name", style: "display: block" %>
      <%= form.text_field :firstName %>
    </div>

    <div class="Entry">
      <%= form.label :LastName,"Last Name", style: "display: block" %>
      <%= form.text_field :LastName %>
    </div>

    <div class="Entry">
      <%= form.label :email, style: "display: block" %>
      <%= form.email_field :email %>
    </div>

    <div class="Entry">
      <%= form.label :gender, style: "display: block" %>
      <%= form.radio_button :gender, "Male" %>
      <%= form.label "Male" %>
      <br>
      <%= form.radio_button :gender, "Female" %>
      <%= form.label "Female" %>
      <br>
      <%= form.radio_button :gender, "Other" %>
      <%= form.label "Other." %>
    </div>

    <!--<div class="Entry">
      <%#= form.label :userId, style: "display: block" %>
      <%#= form.text_field :userId %>
    </div>-->

    <div class="Entry">
      <%= form.label "Who are you?", style: "display: block"  %>
      <%= form.radio_button :role, "Student" %>
      <%= form.label "I am a Student." %>
      <br>
      <%= form.radio_button :role, "Professor" %>
      <%= form.label "I am a Professor." %>
      <br>
      <%= form.radio_button :role, "Faculty" %>
      <%= form.label "Other Faculty Member." %>
    </div>

    <div class="Entry">
        <%= form.label "Password", style: "display: block" %>
        <%= form.password_field :password, placeholder: "password", id: "show_hide_password" %>
    </div>

    <div class="Entry">
      <%= form.label "Confirm Password", style: "display: block" %>
      <%= form.password_field :password_confirmation , placeholder:"password"%>
    </div>



    <div class="Entry">
      <%= form.submit "Create User"%>
    </div>
  <%end %>

</body>
</html>
